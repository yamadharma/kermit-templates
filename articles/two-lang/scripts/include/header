# -*- mode:sh -*-

scriptname=`basename $0`

if [[ ${scriptname} == prepare ]]
then
    PROJECT_NAME=$1
    NAME=$2
    shift
    shift
    file_list=$@
else
    # Старый вариант именования скриптов
    # Убираем префикс `prepare_`
    PROJECT_NAME=${scriptname/prepare_/}
    NAME=$1
    shift
    file_list=$@
fi

## Variables
OUT_DIR="out/${PROJECT_NAME}"
OUT_NAME="${PROJECT_NAME}_${NAME}"

