from lxml import etree
from codecs import open

topdir = 'papers'
topdir_src = topdir + '/src'
topdir_doc = topdir_src
topdir_tex = topdir + '/tex'
try:
    os.makedirs(topdir)
    os.makedirs(topdir_src)
    os.makedirs(topdir_tex)
except:
    print "Каталог существует:", topdir



