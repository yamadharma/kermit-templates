	# Вытаскивание файла
	elif element.tag == 'galley':
            file_locale = embed.get('locale')
	    for i4 in range(len(element)):
		file = element[i4]
		if file.tag == 'file':
		    for i5 in range(len(file)):
			embed = file[i5]
			if embed.tag == 'embed':
			    filename = embed.get('filename')
			    fileext = filename[filename.find('.'):]
                            # Make own dir for single tex-file
                            if fileext == '.tex':
                                paper_dir_name_doc = topdir_src + '/' + paper_id
                                try:
                                    os.makedirs(paper_dir_name_doc)
                                except:
                                    print "Каталог существует:", paper_dir_name_doc
                            else:
                                paper_dir_name_doc = topdir_src
                            # Extract embeded file
			    paper_file_name_doc = paper_dir_name_doc + '/' + paper_id + fileext
			    paper_file_doc = open(paper_file_name_doc, 'w')
			    paper_file_doc.write(binascii.a2b_base64(embed.text))
			    paper_file_doc.close()
                            # Make main tex-file
                            # locale
                            if file_locale == 'en_US':
                                paper_file_tex.write("{\\selectlanguage{english}" + '\n')
                            else:
                                paper_file_tex.write("{\\selectlanguage{russian}" + '\n')
                            # Include title and authors
	                    paper_file_tex.write("\\input{tex-title/" + paper_id + "}%" + '\n')
	                    # \paperid{}
	                    paper_file_tex.write("\\paperid{" + paper_id + "}%" + '\n')
			    paper_file_tex.write("\\maketitleToc" + '\n')
			    paper_file_tex.write("\\includepdf[pages=-,pagecommand=\\thispagestyle{fancy}]{pdf/" + paper_id + ".pdf}" + '\n')
                            paper_file_tex.write("}" + '\n')
			    paper_file_tex.close()


















